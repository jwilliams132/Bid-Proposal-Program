<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>

<VBox fx:id="pricingDisplay" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="gearworks.PricingDisplayController" styleClass="secondaryScrollBackground">

    <HBox style="-fx-padding: 10;" alignment="TOP_CENTER">
        <ScrollPane fx:id="legendScrollPane" VBox.vgrow="ALWAYS" fitToWidth="true" fitToHeight="true" styleClass="secondaryScrollBackground">
            <content>
                <VBox fx:id="legendContents" spacing="5" style="-fx-padding: 0;" prefWidth="205" alignment="TOP_CENTER" styleClass="secondaryBackground">

                </VBox>
            </content>
        </ScrollPane>
        <VBox HBox.hgrow="ALWAYS">
            <VBox>
                <Label fx:id="jobHeader" styleClass="tertiaryLabel">
                    <font>
                        <Font name="Courier New" size="16" />
                    </font>
                </Label>
            </VBox>
            <ScrollPane fx:id="jobScrollPane" styleClass="secondaryScrollBackground">
                <content>
                    <GridPane fx:id="jobContents" vgap="10" hgap="10" styleClass="secondaryBackground">

                    </GridPane>
                </content>
            </ScrollPane>
        </VBox>
    </HBox>
</VBox>
