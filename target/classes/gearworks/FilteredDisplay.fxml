<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox fx:id="filteredDisplay" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="gearworks.Controller_FilteredDisplay" styleClass="secondaryBackground">
    <VBox style="-fx-padding: 10 10 10 10; " alignment="CENTER">
        <Label fx:id="header" text="STUFF" styleClass="quaternaryLabel">
            <font>
                <Font name="Courier New" size="16" />
            </font>
        </Label>
    </VBox>
    <ScrollPane fx:id="scrollPane" VBox.vgrow="ALWAYS" fitToHeight="true" fitToWidth="true" styleClass="secondaryScrollBackground">
        <content>
            <StackPane style="-fx-padding: 0 0 0 10; ">
                <VBox fx:id="contentRegion" alignment="CENTER" VBox.vgrow="ALWAYS" styleClass="secondaryBackground">
                    <!-- The content will be dynamically populated by the controller -->
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </VBox>
            </StackPane>
        </content>
    </ScrollPane>
</VBox>