<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox fx:id="unfilteredDisplay" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="gearworks.UnfilteredDisplayController"
	styleClass="secondaryBackground">

	<HBox fx:id="scrollPaneContainer" style="-fx-padding: 10 0 0 0; ">
		<ScrollPane fx:id="selectedListScrollPane" fitToWidth="true" fitToHeight="false"
			styleClass="secondaryScrollBackground">
			<content>
				<VBox fx:id="selectedList" style="-fx-padding: 0 10 0 10; " prefWidth="175">
					<Label fx:id="selectedCount" text="(00 selected)" styleClass="quaternaryLabel">
						<font>
							<Font name="Courier New" size="16" />
						</font>
					</Label>
				</VBox>
			</content>
		</ScrollPane>
		<VBox HBox.hgrow="ALWAYS" spacing="10">
			<HBox alignment="CENTER">
				<CheckBox fx:id="checkAll" text="  ALL " onAction="#allChangeState"
					alignment="CENTER" styleClass="tertiaryLabel">
					<font>
						<Font name="Courier New" size="16" />
					</font>
				</CheckBox>
				<VBox alignment="CENTER">
					<Label fx:id="header" text="STUFF" styleClass="quaternaryLabel">
						<font>
							<Font name="Courier New" size="16" />
						</font>
					</Label>
				</VBox>
				<Region prefWidth="17" />

			</HBox>
			<ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true"
				styleClass="secondaryScrollBackground">
				<content>
					<GridPane fx:id="contentRegion" alignment="CENTER"
						styleClass="secondaryBackground">
						<padding>
							<Insets top="10" right="10" bottom="10" left="10" />
						</padding>
					</GridPane>
				</content>
			</ScrollPane>
		</VBox>
	</HBox>
</VBox>