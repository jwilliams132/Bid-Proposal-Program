<!-- staticUI.fxml -->
<?fxml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Priority?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="gearworks.App">
	<!-- 3d567b -->
	<top>
		<VBox>
			<!-- MenuBar for File, View, Options, and Help -->
			<MenuBar fx:id="menuBar">
				<menus>

					<Menu text="File">
						<items>
							<MenuItem text="Open files..." onAction="#openFile" />
							<MenuItem text="Update Info" onAction="#updateInfo" />
							<MenuItem text="Save Files..." onAction="#saveFiles" />
							<MenuItem text="Export Excel..." onAction="#saveExcel" />
							<SeparatorMenuItem />
							<MenuItem text="Close" onAction="#closeApplication" />
						</items>
					</Menu>

					<Menu fx:id="filteringMenu" text="Filtering">
						<items>

						</items>
					</Menu>
					<Menu fx:id="viewMenu" text="View">
						<items>

						</items>
					</Menu>


					<Menu fx:id="optionsMenu" text="Options">
						<items>

						</items>
					</Menu>


					<Menu text="Help">
						<items>
							<MenuItem text="Help" />
						</items>
					</Menu>
				</menus>
			</MenuBar>
			<HBox fx:id="openFilePanel" spacing="10" style="-fx-padding: 10 10 10 10;"
				alignment="CENTER_LEFT">
				<children>
					<Button fx:id="chooseOpenFile" text="Open File" onAction="#openFile" />
					<Button fx:id="chooseOpenFolder" text="Open Folder" onAction="#openFolder" />
					<Label fx:id="openFilePath" text="File Path: ">
						<font>
							<Font name="Courier New" size="16" />
						</font>
					</Label>
					<Region HBox.hgrow="ALWAYS" />
					<Button fx:id="updateBidders" text="Add Update Bidders" onAction="#updateInfo" />
				</children>
			</HBox>
		</VBox>
	</top>

	<center>
		<StackPane fx:id="displayPanel">

		</StackPane>
	</center>
	<bottom>
		<VBox>
			<HBox fx:id="dataManipulationPanel" style="-fx-padding: 10 10 0 10;">
				<HBox fx:id="jobFilterPanel" spacing="10">
					<children>
						<Button fx:id="filterJobs" text="Confirm Selected Jobs" prefWidth="144"
							onAction="#filterJobs" />
						<Button fx:id="addPricing" text="Add Pricing to Jobs" prefWidth="144"
							onAction="#switchToPricing" />
					</children>
				</HBox>
				<HBox fx:id="jobSelectionPanel" spacing="10" alignment="CENTER" HBox.hgrow="ALWAYS">
					<children>
						<Button fx:id="previousJob" text="&lt;&lt; Previous Job"
							onAction="#previousJob" />
						<Label fx:id="currentJobLabel" text="(00/00)">
							<font>
								<Font name="Courier New" size="16" />
							</font>
						</Label>
						<Button fx:id="nextJob" text="Next Job &gt;&gt;" onAction="#nextJob" />
					</children>
					<HBox.hgrow>
						<Priority fx:value="ALWAYS" />
					</HBox.hgrow>
				</HBox>
			</HBox>
			<HBox fx:id="saveFilePanel" spacing="10" alignment="CENTER"
				style="-fx-padding: 10 10 10 10;">
				<Button fx:id="createClearText" text="Create Readable File" prefWidth="144"
					onAction="#createClearText" />
				<Button fx:id="chooseSaveFolder" text="Choose a Save Folder..." prefWidth="144"
					onAction="#saveFiles" />
				<Label fx:id="directoryPath" text="Directory Path: ">
					<font>
						<Font name="Courier New" size="16" />
					</font>
				</Label>
				<Region HBox.hgrow="ALWAYS" />
				<Button fx:id="saveExcel" text="Export Excel File" onAction="#saveExcel" />
			</HBox>
		</VBox>
	</bottom>

</BorderPane>